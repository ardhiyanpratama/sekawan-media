@{
    var controller = ViewContext.RouteData.Values["Controller"].ToString();
    var isLogged = ViewBag.IsLogin;
    string cLayout = "";
    if (controller == "Login" && isLogged is null)
    {
        cLayout = "~/Views/Shared/_Login.cshtml";
    }
    else
    {
        cLayout = "~/Views/Shared/_Layout.cshtml";
    }
    Layout = cLayout;
}
